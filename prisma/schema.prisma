generator client {
  provider = "prisma-client-js"
}


// Définir le fournisseur MongoDB
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Chaîne de connexion à la base de données
}

// Définir un modèle simple pour tester
model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId // Utilisation du type ObjectId pour MongoDB
  email    String   @unique
  username String   @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
